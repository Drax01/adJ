		mv /mnt/bsd.mp /mnt/bsd
	fi

	update_firmware

	store_random

	cat <<__EOT

$_slcongrat2
__EOT
	[[ $MODE == install ]] && cat <<__EOT
$_slnewmail
__EOT

	md_congrats
	[[ $MODE == upgrade ]] && \
		echo "$_slafterrebootingsysmerge"
	$AUTO && >/ai.done
}


